{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "db:migrate": "ts-node -T ./node_modules/.bin/typeorm migration:run",
    "db:migrate-create": "ts-node -T ./node_modules/.bin/typeorm migration:create",
    "db:migrate-generate": "ts-node -T ./node_modules/.bin/typeorm migration:generate",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "FIXTURES=false NODE_ENV=dev ts-node -r tsconfig-paths/register src/main.ts",
    "start:inspect": "FIXTURES=false NODE_ENV=dev ts-node --inspect-brk -r tsconfig-paths/register src/main.ts",
    "start:fixtures": "FIXTURES=true NODE_ENV=dev ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --inspect-brk nodemon-debug.json",
    "start:prod-backup": "node dist/main.js",
    "start:prod": "yarn db-migrate && node node_modules/.bin/ts-node -T src/main.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:unit": "jest --testRegex src/.*/__unit__/[^/]+.test.ts",
    "test:e2e": "jest --ci --runInBand --forceExit --detectOpenHandles --testRegex src/.*/__e2e__/[^/]+.test.ts",
    "test:e2e-parallel": "jest --ci  --maxWorkers=6 --testRegex src/.*/__e2e__/[^/]+.test.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:sonar": "env TZ='Europe/Berlin' jest --coverage --ci --maxWorkers=6 --testResultsProcessor=\"./node_modules/jest-sonar-reporter\" --coverageReporters=lcov --collectCoverage true --coverageDirectory coverage"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.4",
    "@nestjs/core": "^6.0.4",
    "@nestjs/microservices": "^6.0.4",
    "@nestjs/platform-express": "^6.0.4",
    "@nestjs/swagger": "^3.1.0",
    "swagger-ui-express": "^4.0.7",
    "@nestjs/testing": "^6.5.2",
    "@nestjs/typeorm": "^6.1.3",
    "@nestjs/websockets": "^6.0.4",
    "@types/lodash": "^4.14.136",
    "bcrypt": "^3.0.4",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "pg": "^7.11.0",
    "pg-connection-string": "^2.1.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "typeorm": "^0.2.18",
    "typeorm-naming-strategies": "^1.1.0",
    "uuid": "^3.2.1",
    "ts-node": "^8.3.0",
    "async-redis": "^1.1.4",
    "redis-url": "^1.2.1"
  },
  "devDependencies": {
    "@types/check-types": "^7.3.0",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/multer": "^1.3.6",
    "@types/node": "11.13.4",
    "@types/supertest": "2.0.7",
    "@types/uuid": "^3.4.5",
    "concurrently": "^4.1.0",
    "jest": "24.7.1",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.19.1",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-mockito": "^2.3.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/main.ts",
      "!src/migrations/**/*"
    ],
    "testRegex": "src/.*\\.test.ts",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
